<div class="page-header">
  <%= link_to new_recipe_app_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Recipe app
  <% end %>
  <h1>Listing recipe_apps</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Page</th>
            <th>Dish</th>
            <th>Ingredient 1</th>
            <th>Ingredient 2</th>
            <th>Ingredient 3</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @recipe_apps) do |recipe_app| %>
            <td><%= recipe_app.page %></td>
            <td><%= recipe_app.dish %></td>
            <td><%= recipe_app.ingredient_1 %></td>
            <td><%= recipe_app.ingredient_2 %></td>
            <td><%= recipe_app.ingredient_3 %></td>
            <td><%= link_to 'Show', recipe_app %></td>
        <td><%= link_to 'Edit', edit_recipe_app_path(recipe_app) %></td>
        <td><%= link_to 'Destroy', recipe_app, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
